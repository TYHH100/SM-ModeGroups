import os

builder = GetBuilder()

binary_name = 'modegroup.ext'

sources = [
    'extension.cpp',
    os.path.join(Modegroup.sm_root, 'public', 'smsdk_ext.cpp')
]
extension = builder.AddBinary(binary_name, sources)
extension.target_binary = os.path.join('extensions', binary_name)
extension.include += [
    # 当前目录
    os.path.dirname(builder.current_source_path),
]